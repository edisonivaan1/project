{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/assets/(.*\\.css)",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "src": "/assets/(.*\\.js)",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "/assets/(.*\\.png)",
      "headers": {
        "Content-Type": "image/png"
      }
    },
    {
      "src": "/assets/(.*\\.jpg)",
      "headers": {
        "Content-Type": "image/jpeg"
      }
    },
    {
      "src": "/assets/(.*\\.jpeg)",
      "headers": {
        "Content-Type": "image/jpeg"
      }
    },
    {
      "src": "/assets/(.*\\.svg)",
      "headers": {
        "Content-Type": "image/svg+xml"
      }
    },
    {
      "src": "/assets/(.*\\.mp3)",
      "headers": {
        "Content-Type": "audio/mpeg"
      }
    },
    {
      "src": "/assets/(.*\\.wav)",
      "headers": {
        "Content-Type": "audio/wav"
      }
    },
    {
      "src": "/assets/(.*\\.ogg)",
      "headers": {
        "Content-Type": "audio/ogg"
      }
    },
    {
      "src": "/(.*\\.css)",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "src": "/(.*\\.js)",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "/(.*\\.png)",
      "headers": {
        "Content-Type": "image/png"
      }
    },
    {
      "src": "/(.*\\.jpg)",
      "headers": {
        "Content-Type": "image/jpeg"
      }
    },
    {
      "src": "/(.*\\.jpeg)",
      "headers": {
        "Content-Type": "image/jpeg"
      }
    },
    {
      "src": "/(.*\\.svg)",
      "headers": {
        "Content-Type": "image/svg+xml"
      }
    },
    {
      "src": "/(.*\\.mp3)",
      "headers": {
        "Content-Type": "audio/mpeg"
      }
    },
    {
      "src": "/(.*\\.wav)",
      "headers": {
        "Content-Type": "audio/wav"
      }
    },
    {
      "src": "/(.*\\.ogg)",
      "headers": {
        "Content-Type": "audio/ogg"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 